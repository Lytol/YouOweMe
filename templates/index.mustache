{{{error_messages_for_debt}}}

<p>Someone owe you something? We'll remind them with emails until they pay up.</p>

<form action="/debts" method="POST" id="debt-form">
  <p>
    <input type="text" name="debt[debtor]" id="debt-debtor" title="debtor@hotmail.com" class="default-text" /><br />
    owes<br />
    <input type="text" name="debt[collector]" id="debt-collector" title="collector@gmail.com" class="default-text" /><br />
    <select name="debt[quantity]" id="debt-quantity">
      {{{options_for_quantity}}}
    </select> 
    <select name="debt[item]" id="debt-item">
      {{{options_for_item}}}
    </select>
    <input type="text" name="debt-item-custom" id="debt-item-custom" style="display: none" /><a id="tgl_nevermind" href="#" style="display: none">Back to the list</a>
    <a id="tgl_other" href="#">Something Else</a><br />
    for<br />
    <textarea name="debt[notes]" id="debt-notes" title="{{random_note}}" class="default-text"></textarea>
  </p>
  
  <p><input type="submit" value="Create" /></p>
</form>

<script type="text/javascript" charset="utf-8">
  $('#tgl_nevermind, #tgl_other').click(function() {
    $('#debt-item').toggle();
    $('#debt-item-custom').toggle();
    $('#tgl_other').toggle();
    $('#tgl_nevermind').toggle();
    $('#debt-item-custom').val('');
    return false;
  })
</script>

